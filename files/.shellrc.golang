# environment variables
export GOPATH=~/projects/go-path
export PATH="$GOPATH/bin:$PATH"

# aliases
alias go_cd='cd $GOPATH'
alias go_init='mkdir -p $GOPATH; cd $GOPATH; go get github.com/tools/godep'
alias go_update='cd $GOPATH; find src -maxdepth 3 -mindepth 3 -type d | while read f; do pkg=${f#*/}; echo "updating $pkg ..."; go get -u $pkg; done'
alias go_buildtest='godep save ../...; godep go build ./...; godep go test ./...'
